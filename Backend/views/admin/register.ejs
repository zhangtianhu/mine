<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">       
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdn.staticfile.org/twitter-bootstrap/3.3.7/css/bootstrap.min.css">  
	<script src="https://cdn.staticfile.org/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://cdn.staticfile.org/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <style type="text/css">
        body{
          background-image: url(/images/background.jpg);
          background-repeat: no-repeat;
          background-size: cover;
          width: 100%;
          height: 100%;
          /* padding-top: 20px;  */
          
        } 
        img{
          margin-left: 45%;
          margin-top: 40px;
        } 
       
    </style>
  </head>

  <body>
    <div id="container" class="container">
       <% if (locals.success) { %> 
          <div id="alt_sucess" class="alert alert-success"> 
            <%- success %> 
          </div> 
       <% } %> 

      <% if (locals.error) { %> 
        <div id="alt_warning" class="alert alert-danger"> 
          <%= error %> 
        </div> 
      <% } %> 
      
        <p class="text-center h2">简语管理系统</p>
        <img src="/images/jane_1.png" class="img-responsive" alt="jane">
        
        <form class="form-horizontal" role="form" method="post">
          <div class="form-group row" id="one">
            <label for="txtUserName" class="control-label col-sm-3 col-sm-offset-2">用户名</label>
            <div class="col-sm-3">
              <input type="text" class="form-control" id="txtUserName" placeholder="Admin" name="txtUserName" required>
            </div>
          </div>
          <div class="form-group row" id="two">
            <label for="txtUserPwd" class="col-sm-3 col-sm-offset-2 control-label">密码</label>
            <div class="col-sm-3">
              <input type="password" class="form-control" id="txtUserPwd" name="txtUserPwd" placeholder="Password" required>
            </div>
          </div>
          <div class="form-group row" id="three">
            <label for="txtUserRePwd" class="col-sm-3 col-sm-offset-2 control-label">确认密码</label>
            <div class="col-sm-3">
                <input type="password" class="form-control" id="txtUserRePwd" name="txtUserRePwd" placeholder="Password" required>
            </div>
          </div>
          <button id="btnSub" class="btn btn-md btn-primary" type="submit" style="margin-left: 43%;width:10rem">注  册</button>
          <a class="btn btn-md btn-primary" href="/admin/login" role="button" id="btnLog" style="width:10rem">登  录</a>

        </form>
      
      
    </div> 
  </body>
</html>

<script type="text/javascript">
    $(function(){
        $('#btnSub').on('click',function(){
            var 
            $txtUserName = $('#txtUserName'),
            txtUserNameVal = $.trim($txtUserName.val()),            
            $txtUserPwd = $('#txtUserPwd'),
            txtUserPwdVal = $.trim($txtUserPwd.val()),
            $txtUserRePwd = $('#txtUserRePwd'),
            txtUserRePwdVal = $.trim($txtUserRePwd.val());
            
            if(txtUserNameVal.length == 0)
           {
               $("#one").append('<span id="a" style="color:red;font-size:18px;">用户名不能为空</span>');
               $txtUserName.focus();
               return false;
           }
           $("#a").remove();
           if(txtUserPwdVal.length == 0)
           {                
               $("#two").append('<span id="b" style="color:red;font-size:18px;">密码不能为空</span>');
               $txtUserPwd.focus();
               return false;
           }
           $("#b").remove();
           if(txtUserRePwdVal.length == 0)
           {
               $("#three").append('<span id="c" style="color:red;font-size:18px;">确认密码不能为空</span>');                
               $txtUserRePwd.focus();
               return false;
           }
           $("#c").remove();
           if(txtUserPwdVal != txtUserRePwdVal)
           {                 
                $("#three").append('<span id="c" style="color:red;font-size:18px;">两次密码不一致</span>');      
                $txtUserPwd.focus();
                return false;
           }
           $("#c").remove();
           return true;
        })
    });

</script>
